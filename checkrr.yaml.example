checkrr:
  checkpath: 
    - "./test"
  database: ./checkrr.db
  debug: true
  csvfile: "./badfiles.csv"
  logfile: "./checkrr.log"
  logjson: false
  cron: "@daily"
  ignorehidden: true
  ignorepaths:
    - 'media/ignored'
  ignoreexts:
    - .txt
    - .nfo
    - .nzb
    - .url
arr:
  radarr:
    process: false
    service: radarr
    address: ""
    apikey: ""
    baseurl: /
    port: 7878
  radarr-4k:
    process: false
    service: radarr
    address: ""
    apikey: ""
    baseurl: /
    port: 7979
  sonarr:
    process: false
    service: sonarr
    address: 127.0.0.1
    apikey: ""
    baseurl: /
    port: 8989
  anime:
    process: false
    service: sonarr
    address: 127.0.0.1
    apikey: ""
    baseurl: /
    port: 8888
  lidarr:
    process: false
    service: lidarr
    address: 127.0.0.1
    apikey: ""
    baseurl: /
    port: 8686
notifications:
  discord:
    url: ""
    notificationtypes: 
      - reacquire
      - unknowndetected
      - startrun
      - endrun
  healthchecks:
    url: ""
    notificationtypes: # start and end are required
      - startrun
      - endrun
      - reacquire
  telegram:
    token: ""
    username: "@username" # This must start with an @ to send to a user, otherwise, list the channel name
    notificationtypes:
      - reacquire
      - unknowndetected
      - startrun
      - endrun
  webhook:
    url: ""
    notificationtypes:
      - reacquire
      - unknowndetected
      - startrun
      - endrun
  pushbullet:
    apitoken: ""
    devices: 
      - myDevice1
      - iPhone14
    notificationtypes:
      - reacquire
      - unknowndetected
      - startrun
      - endrun
  pushover:
    apitoken: ""
    recipient: ""
    notificationtypes:
      - reacquire
      - unknowndetected
      - startrun
      - endrun
  gotify:
    url: ""
    authtoken: ""
    notificationtypes:
      - reacquire
      - unknowndetected
      - startrun
      - endrun
stats: # These will slow down the runtime substantually, but... DATA
  influxdb1:
    url: ""
    user: "" # leave this and pass blank if your server requires no authentication
    pass: ""
    bucket: "checkrr" # this database must exist already. Use influx command to create the database.
  influxdb2:
    url: ""
    token: ""
    org: "default"
    bucket: "checkrr"
webserver:
  port: 8585
  baseurl: "/"
  trustedproxies:
    - 127.0.0.1
